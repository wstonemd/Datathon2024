  title = {Actual and Projected Incidence Rates for Chronic Subdural Hematomas in {{United States Veterans Administration}} and Civilian Populations},
  author = {Balser, David and Farooq, Sameer and Mehmood, Talha and Reyes, Marleen and Samadani, Uzma},
